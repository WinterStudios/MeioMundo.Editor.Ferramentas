<UserControl x:Class="MeioMundo.Editor.Ferramentas.Barcode.Barcode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeioMundo.Editor.Ferramentas.Barcode"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="box" TextChanged="box_TextChanged" />
        <Border Grid.Column="1" BorderBrush="#FF9D9D9D" BorderThickness="0" Width="300" Height="40" Background="White">
            <Viewbox>
                <Image x:Name="image" RenderOptions.BitmapScalingMode="HighQuality"/>
            </Viewbox>
        </Border>
    </Grid>
</UserControl>
