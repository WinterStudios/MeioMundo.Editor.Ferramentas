<UserControl x:Class="MeioMundo.Editor.Ferramentas.Docs.Models.Modelo_Matricula"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeioMundo.Editor.Ferramentas.Docs.Models"
             xmlns:disciplinas="clr-namespace:MeioMundo.Editor.Ferramentas.Docs.Internal.Matriculas"
             mc:Ignorable="d" 
             Height="29.7cm" Width="21cm"
             SnapsToDevicePixels="True"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MeioMundo.Editor.Ferramentas;component/StyleManager.xaml" />
                <ResourceDictionary Source="/MeioMundo.Editor.Ferramentas;component/Docs/Internal/Matriculas/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Grid Margin="0.5cm">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0.8cm"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Border Height="0.8cm" BorderThickness="0.5pt" BorderBrush="#FFA6A6A6"  Background="#FFA6A6A6">
                <Grid Margin="0.1cm 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="UC_TextBlock_Ano" Foreground="Black" FontSize="14pt" VerticalAlignment="Center" />
                        <TextBlock Text=" - " Foreground="Black" FontSize="14pt" VerticalAlignment="Center" />
                        <TextBlock x:Name="UC_TextBlock_Escola" Text="Oliveira do Hospital" Foreground="Black" FontSize="14pt" FontWeight="Bold" VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Ano Letivo " Foreground="Black" FontSize="14pt" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        <TextBlock Text="2020/2021" Foreground="Black" FontSize="14pt" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right" />
                    </StackPanel>
                </Grid>
            </Border>
            <Border Height="0.4cm" Background="#FFFFCB23">
                <TextBlock Text="Componente Geral" FontSize="9pt" Foreground="Black" HorizontalAlignment="Center"/>
            </Border>
            <DataGrid x:Name="UC_DataGrid_CG" HeadersVisibility="None" MinHeight="40" AutoGenerateColumns="False" Style="{StaticResource Matricula_DataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="3cm" Header="Disciplina" Binding="{Binding Disciplina, Converter={StaticResource DisciplinasConvert} }" />
                    <DataGridTextColumn Width="2.5cm" Header="ISBN" Binding="{Binding ISNB}"/>
                    <DataGridTextColumn Width="*" Header="Titlo" Binding="{Binding Nome}"/>
                    <DataGridTextColumn Width="3cm" Header="Autor" Binding="{Binding Autor}"/>
                    <DataGridTextColumn Width="3cm" Header="Editora" Binding="{Binding Editora}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        
    </Grid>
</UserControl>
